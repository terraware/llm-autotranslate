{
  "name": "llm-autotranslate",
  "version": "0.0.0-dev",
  "description": "A utility for LLM-based automated translation of strings for localizable software",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "bin": {
    "autotranslate": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write .",
    "format:changed": "git diff -z --name-only --diff-filter=ACMR main -- '**.js' '**.ts' '**.json' '**.md' | xargs -0r prettier --write",
    "lint": "eslint src",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.1",
    "openai": "^5.12.1",
    "xxhashjs": "^0.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.19",
    "@types/xxhashjs": "^0.2.4",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
